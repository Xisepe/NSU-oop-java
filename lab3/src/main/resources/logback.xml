<configuration debug="true">
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>cars.log</file>
        <append>true</append>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS}:%msg%n</pattern>
        </encoder>
    </appender>
    <root level="info">
        <appender-ref ref="FILE" />
    </root>
</configuration>